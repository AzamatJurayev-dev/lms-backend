  code        String  @unique // BASIC, PRO, PREMIUM
  name        String
  description String?

  // limitlar
  maxGroups    Int
  maxStudents  Int
  maxTeachers  Int
  maxStorageMb Int // ðŸ”¥ storage limiti (MB)

  price        Int // oyiga (so'm yoki cent)
  durationDays Int // 30, 90, 365
